#!/usr/bin/python3
def new_in_list(my_list, idx, element):
    def replace_in_list(my_list, idx, element):
        if idx < 0 or idx >= len(my_list):
            return list.copy(my_list)
        for i in range(len(my_list)):
            if i == idx:
                my_list[i] = element
        return list.copy(my_list)
